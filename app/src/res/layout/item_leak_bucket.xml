<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="?attr/selectableItemBackground">

    <!-- CRITICAL ID: tv_bucket_name -->
    <TextView
        android:id="@+id/tv_bucket_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:textStyle="medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_leak_amount"
        app:layout_constraintHorizontal_bias="0"
        tools:text="Uncategorized Leaks" />

    <!-- CRITICAL ID: tv_leak_amount -->
    <TextView
        android:id="@+id/tv_leak_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="@color/leak_red"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="â‚¹ 4,125.00" />

    <!-- CRITICAL ID: tv_insight_summary -->
    <TextView
        android:id="@+id/tv_insight_summary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_bucket_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_bucket_name"
        tools:text="Tap for insight and next action." />

</androidx.constraintlayout.widget.ConstraintLayout>
