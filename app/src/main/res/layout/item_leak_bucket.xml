<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="bucket"
            type="com.example.financeapp.ui.viewmodel.LeakBucketUiModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvBucketName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{bucket.bucketName}"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBucketAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{String.valueOf(bucket.leakageAmount)}'
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvInsightSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{bucket.insightSummary}"
            android:textSize="12sp"
            android:textColor="#888888" />
    </LinearLayout>
</layout>
