<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Autopilot Status -->
        <TextView
            android:id="@+id/tvAutopilotStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Autopilot Status: Loading..."
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="8dp" />

        <!-- Leakage Projection Card -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#EEEEEE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Leakage"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCurrentLeakage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="₹0"
                android:textSize="22sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Projected Salary After Recovery"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvProjectedSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="₹0"
                android:textSize="22sp" />
        </LinearLayout>

        <!-- RecyclerView for Leak Buckets -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvLeakageBuckets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>

</ScrollView>
